<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="30dp">


     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_gravity="center">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

             <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                <!-- <ImageView
                     android:id="@+id/home_list_item_iv_post_photo"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:contentDescription="@string/post_photo"
                     android:scaleType="centerCrop"
                     android:src="@drawable/post_image" /> -->

                 <com.synnapps.carouselview.CarouselView
                     android:id="@+id/home_list_item_cv_post_photos"
                     android:layout_width="match_parent"
                     android:layout_height="150dp"
                     app:fillColor="#FFFFFFFF"
                     app:pageColor="#00000000"
                     app:radius="6dp"
                     app:slideInterval="3000"
                     app:strokeColor="#FF777777"
                     app:strokeWidth="1dp"/>

                 <ImageView
                     android:id="@+id/home_list_item_iv_bookmark"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="top|end"
                     android:layout_margin="10dp"
                     android:contentDescription="@string/bookmark"
                     android:src="@drawable/bookmark" />


             </FrameLayout>



             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="bottom"
                 android:orientation="vertical"
                 android:background="#5CB6B3B3"
                 android:padding="10dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_marginStart="10dp"
                     android:layout_marginEnd="10dp"
                     android:layout_marginTop="10dp">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="$23,500"
                         android:textStyle="bold"
                         android:textColor="@color/black"
                         android:textSize="18sp"
                         android:id="@+id/home_list_item_tv_price"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Studio Apartment"
                         android:layout_marginStart="10dp"
                         android:id="@+id/home_list_item_tv_name"/>
                 </LinearLayout>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="23 Cross, HRBR Layout, Bangalore"
                     android:layout_marginStart="10dp"
                     android:id="@+id/home_list_item_tv_address"/>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:padding="5dp"
                     android:gravity="center"
                     android:layout_margin="20dp">
                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/bed"/>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="3 Bed"
                         android:layout_marginStart="5dp"
                         android:layout_marginEnd="10dp"/>
                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/bath"/>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="2 Bath"
                         android:layout_marginStart="5dp"
                         android:layout_marginEnd="10dp"/>
                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/car"/>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="2 Barking"
                         android:layout_marginStart="5dp"
                         android:layout_marginEnd="10dp"/>
                 </LinearLayout>

             </LinearLayout>

         </LinearLayout>

         <ImageView
             android:id="@+id/home_list_item_iv_location"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center|end"
             android:layout_marginTop="10dp"
             android:elevation="15dp"
             android:contentDescription="@string/location"
             android:src="@drawable/location" />

     </FrameLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>
</layout>